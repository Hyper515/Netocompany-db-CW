html
  head
    h1.title-company Netocompany
    title Patient Manager
    link(rel='stylesheet' href='/style.css')
  body
    h1 Patient Manager
    form(action='/search' method='get')
      input(type='text' name='query' placeholder='Search patients...')
      button(type='submit') Search
    table
      tr
        th Name
        th Age
        th Gender
        th Phone
        th NhsNo
        th Edit
      each patient in Patient
        tr
          td #{patient.Forename}
          td #{patient.Dob}
          td #{patient.Gender}
          td #{patient.MobNo}
          td #{patient.NhsNo}
          td
            a(href='/PatientEditPage/' + patient.NhsNo) Edit

    div
      button.button-format(type='button', onclick='window.location.href="/";') Back
