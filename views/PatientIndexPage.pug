html
  head
    h1.title-company Netocompany
    title Patient Manager
    link(rel='stylesheet' href='/style.css')
  body
    h1 Patient Manager
    form(action='/Patient' method='get')
      input(type='text' name='txtForename' placeholder='First name...')
      input(type='text' name='txtSurname' placeholder='Surname...')
      button(type='submit') Search
    table
      tr
        th Forename
        th Surname
        th Dob
        th Gender
        th Phone
        th NhsNo
        
      each patient in Patient
        tr
          td #{patient.Forename}
          td #{patient.Surname}
          td #{patient.Dob}
          td #{patient.Gender}
          td #{patient.MobNo}
          td #{patient.NhsNo}
          td
            a(href='/PatientRecords/' + patient.NhsNo) View

          td
            a(href='/PatientEditPage/' + patient.NhsNo) Edit

    div
      button.button-format(type='button', onclick='window.location.href="/";') Back
