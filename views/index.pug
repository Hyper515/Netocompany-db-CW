html
  head
    title Patient Manager
  body
    h1 Patient Manager
    form(action='/search' method='get')
      input(type='text' name='query' placeholder='Search patients...')
      button(type='submit') Search
    table
      tr
        th Name
        th Age
        th Gender
        th Phone
        th NhsNo
        th Edit
      each patient in Patient
        tr
          td #{patient.ForeName}
          td #{patient.Dob}
          td #{patient.Gender}
          td #{patient.MobNo}
          td #{patient.NhsNO}
          td
            a(href='/edit/' + patient.NhsNO) Edit
